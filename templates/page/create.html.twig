{% extends 'base.html.twig' %}

{% block body %}
    <h1>Create page</h1>

    {{ form_start(form) }}
        {{ form_row(form.title, {'label': 'Title'}) }}
        {{ form_row(form.content, {'label': 'Content'}) }}

        <button type="submit" class="btn btn-primary">
            <i class="fa fa-save" aria-hidden="true"></i> Create page
        </button>
        {{ form_widget(form.saveAndCreateNew, {label: 'Save and Create', attr: {class: 'btn btn-primary'}}) }}
        <a href="{{ path('page_index') }}" class="btn btn-link">
            <i class="fa fa-list-alt" aria-hidden="true"></i> Back to list
        </a>
    {{ form_end(form) }}
{% endblock %}
